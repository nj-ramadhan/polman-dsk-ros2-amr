<?xml version="1.0"?>
<robot name="amr_robot">

  <link name="base_link"/>

  <link name="chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amr_description/meshes/amr.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.7" rpy="0 0 0"/>
      <geometry>
        <box size="1.15 0.7 1.4"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.7" rpy="0 0 0"/>
      <mass value="100.0"/>
      <inertia 
        ixx="10.0" ixy="0.0" ixz="0.0"
        iyy="10.0" iyz="0.0"
        izz="10.0"/>
    </inertial>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

    <!-- Lien du LIDAR avec mesh -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amr_description/meshes/lidar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amr_description/meshes/lidar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Joint entre la base et le LIDAR -->
  <joint name="lidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="lidar_link"/>
    <origin xyz="0.0 -0.492 0.272" rpy="0 0 0"/>
  </joint>

  <!-- Capteur ultrason -->
  <link name="ultrasonic_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amr_description/meshes/hcsr04.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.02 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.00001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Joint fixe entre le chÃ¢ssis et le capteur -->
  <joint name="chassis_to_ultrasonic" type="fixed">
    <parent link="chassis"/>
    <child link="ultrasonic_link"/>
    <origin xyz="0.206 -0.563 0.216" rpy="0 0 0"/>
  </joint>


</robot>
